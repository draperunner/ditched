{
  "name": "ditched",
  "description": "List dependencies that haven't been updated in a long time.",
  "version": "4.0.0",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "cli",
    "check",
    "dependencies",
    "abandoned",
    "outdated"
  ],
  "bugs": {
    "url": "https://github.com/draperunner/ditched/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/draperunner/ditched.git"
  },
  "bin": {
    "ditched": "./dist/ditched.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm run build && node dist/ditched.js",
    "format": "prettier . --write",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-table": "^0.3.11",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/cli-table": "^0.3.4",
    "@types/node": "^24.10.9",
    "@types/yargs": "^17.0.35",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3"
  }
}
